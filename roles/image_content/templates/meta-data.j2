instance-id: {{ inventory_hostname }}
local-hostname: {{ inventory_hostname }}.{{ libvirt_bridges[0].domain }}
network-interfaces: |
  iface eth0 inet static
  address {{ ip }}
  network {{ libvirt_bridges[0].network }} 
  netmask {{ libvirt_bridges[0].ip_netmask }} 
  broadcast {{ libvirt_bridges[0].broadcast }}
  gateway {{ libvirt_bridges[0].ip_address }}
